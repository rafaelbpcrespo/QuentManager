<%= form_for @produto, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :valor_unitario, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valor_unitario, :class => 'text_field' %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :tipo, ["Bebida", "Carne", "Mantimento", "Tempero"], :prompt => "Selecione", :class => 'text_field' %>
      <%#= f.text_field :tipo, :class => 'text_field' %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :quantidade, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantidade, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :limite_minimo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :limite_minimo, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancelar', :default => t("helpers.links.cancelar")),
                produtos_path, :class => 'btn' %>
  </div>
<% end %>
