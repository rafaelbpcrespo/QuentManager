<%= form_for @produto, :html => { :class => 'validate' } do |f| %>
<table >
  <td><p>
    <%= f.label :nome, :class => '' %>
    <%= f.text_field :nome, :class => '' %>
  </p>
  <p>
    <%= f.label :valor_unitario, :class => 'control-label' %>
    <%= f.text_field :valor_unitario, :class => 'text_field' %>
  </p>
  <p>
   <%= f.label :categoria, :class => 'control-label' %>
   <%= f.select :categoria, ["Bebida", "Carne", "Mantimento", "Tempero"], :prompt => "Selecione", :class => 'text_field' %>
   <%#= f.text_field :tipo, :class => 'text_field' %>
  
  </p>
  <p>
    <%= f.label :tipo, :class => 'control-label' %>
    <%= f.select :tipo, ["Lata", "Pet 600ml", "Copo", "Garrafa"], :prompt => "Selecione", :class => 'text_field' %>
   </p>
  <p>
    <%= f.label :quantidade, :class => 'control-label' %>
    <%= f.text_field :quantidade, :class => 'text_field' %>
   </p>
  <p>
  <p>
    <%= f.label :limite_minimo, :class => 'control-label' %>
    <%= f.text_field :limite_minimo, :class => 'text_field' %>
</p><br>
<p>
    <%= f.submit nil, :class => 'button blue-cadastrar-top' %>
    <%= link_to "Cancelar", produtos_path, :class => 'button gray-voltar' %>
</p>
</td>
  </table>
<% end %>
