<%- model_class = Produto -%>
<div class="page-header">
  <h1 class='titulo'>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><br/>
    <%= link_to 'Cadastrar Produto', new_produto_path, :class=>"button blue-cadastrar-top" %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th>Qtd</th>
      <th>Limite Min</th>
      <th width="214px"><center><%=t '.ações', :default => t("helpers.ações") %><center></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.tipo %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.limite_minimo %></td>
        <td>
          <%= link_to edit_produto_path(produto), html_options = { :class => 'button blue', :title => "Editar Dados"} do %>
                      <span class="editar"></span>
                      <% end %>
          <%= link_to produto_path(produto), html_options = { :class => 'button gray', :title => "Ver Dados Completos"} do %>
                      <span class="listar"></span>          
          <% end %>
          <%= link_to new_transacao_path(:produto_id => produto.id), :class => 'button blue', :title => 'Adicionar/Subtrair' do %>          
                      <span class="operacoes"></span>
                      <% end %>
          <%#= link_to atualizar_produto_path(produto), method: :post, :class => 'button blue', :title => 'Adicionar/Subtrair' do %>          
                      <!-- <span class="operacoes"></span> -->
                      <%# end %>
          <%= link_to produto_path(produto), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta produto?')) },
                      :class => 'button red', :title => "Remover" do %>
                      <span class="remover"></span>
                      <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @produtos, renderer: BootstrapPagination::Rails %>
