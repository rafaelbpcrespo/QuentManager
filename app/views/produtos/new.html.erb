<%- model_class = Produto -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', 'Novo %{model}'], :model => model_class.model_name.human.titleize %></h1>
  <% if !@produto.errors.messages.blank? %>
    <p class="error"><%= @produto.errors.full_messages.each do |message| %> <li><%= message %> <% end %></li></p>
  <% end %>
</div>
<%= render :partial => 'form' %>
