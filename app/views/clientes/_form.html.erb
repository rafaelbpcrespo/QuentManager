<%= form_for @cliente, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nome, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :cpf, "CPF", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cpf, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
      <%= f.label :rg, "RG", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :rg, :class => 'text_field' %>
      </div>
  </div>

  <div class="control-group">
      <%= f.label :sexo, :class => 'control-label' %>
      <%= label :sexo, "M", :class =>"radio inline" %>
      <%= f.radio_button :sexo, "M" , :checked => true, :value => "Masculino" %>
      <%= label :sexo, "F", :class =>"radio inline" %>
      <%= f.radio_button :sexo, "F" , :checked => false, :value => "Feminino" %>
  </div>

  <div class="control-group">
    <%= f.label :data_de_nascimento, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data_de_nascimento, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
      <%= f.label :endereco, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :endereco, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :numero, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :numero, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :bairro, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :bairro, :class => 'text_field' %>
      </div>
    </div>        
    <div class="control-group">
      <%= f.label :cidade, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :cidade, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :complemento, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :complemento, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :telefone, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :telefone, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :celular, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :celular, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :empresa, :class => 'control-label' %>
        <div class="controls">
          <%= f.collection_select :empresa_id, Empresa.all, :id, :nome, :prompt => "Selecione", :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
    <%= f.label :cargo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cargo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :setor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :setor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefone_empresa, "Telefone Fixo", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefone_empresa, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ramal, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ramal, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :celular_empresa, "Celular", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :celular_empresa, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_empresa, "Email", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_empresa, :class => 'text_field' %>
    </div>
  </div>      
  <div class="control-group">
    <%= f.label :data_de_pagamento, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data_de_pagamento, :class => 'text_field' %>
    </div>
  </div>

  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancelar', :default => t("helpers.links.cancelar")),
                clientes_path, :class => 'btn' %>
  </div>
<% end %>
