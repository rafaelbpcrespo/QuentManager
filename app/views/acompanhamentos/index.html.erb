<%- model_class = Acompanhamento -%>
<div class="page-header">
  <h1 class='titulo'>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><br/>
    <%= link_to 'Cadastrar Acompanhamento', new_empresa_path, :class=>"button blue-cadastrar-top" %>
  </h1>
        
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Disponibilidade</th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    
    </tr>
  </thead>
  <tbody>
      <% @acompanhamentos.each do |acompanhamento| %>
      <tr>
        <td><%= acompanhamento.nome %></td>
        <td><%= acompanhamento.descricao %></td>
        <td><% if acompanhamento.disponibilidade? %> Ativado <% else %> Desativado <% end %></td>
        <td>
          <%= link_to edit_acompanhamento_path(acompanhamento), html_options = { :class => 'button blue', :title => "Editar Dados"} do %>
                      <span class="editar"></span>
                      <% end %>
          <%= link_to acompanhamento_path(acompanhamento), html_options = { :class => 'button green', :title => "Ver Dados Completos"} do %>
                      <span class="listar"></span>          
          <% end %>
          <%= link_to acompanhamento_path(acompanhamento), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta acompanhamento?')) },
                      :class => 'button red', :title => "Remover" do %>
                      <span class="remover"></span>
                      <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @acompanhamentos, renderer: BootstrapPagination::Rails %>

<%= link_to 'Cadastrar Acompanhamento', new_acompanhamento_path, :class => 'button blue-cadastrar-bottom' %>