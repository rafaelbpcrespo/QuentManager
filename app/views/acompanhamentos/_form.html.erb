<%= form_for @acompanhamento, :html => { :class => 'validate' } do |f| %>
  <% if @acompanhamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@acompanhamento.errors.count, "erro") %> impediram a criação deste acompanhamento:</h2>

      <ul>
      <% @acompanhamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li><br/>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>
<td>
<p>
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao %>
  </p>
  <p>
    <%= f.label :disponibilidade, :class => 'control-label' %>
    Ativar
 
    <%= f.radio_button :disponibilidade, true , :checked => true, :value => true %>
    Desativar
    <%= f.radio_button :disponibilidade, 'f' , :value => 'f' %>
</p>
<br>
  <p>
<br>
        <%= f.submit nil, :class => 'button blue-cadastrar-top' %>
    <%= link_to "Cancelar", acompanhamentos_path, :class => 'button gray-voltar' %>
</p>
</td>
</table>
<% end %>
