<%= form_for @transacao, :html => { :class => 'form-horizontal validate' } do |f| %>
  <% if @transacao.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @transacao.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <%= f.hidden_field :produto_id, :value => params[:produto_id].to_i %>
<div class="row">
        <div class="col-md-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Operação em <%= Produto.find(params[:produto_id].to_i).nome %> </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Quantidade</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :quantidade, :class => 'form-control required numeric' %>                    
                    <span class="validate">Quantidade</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Tipo</label>
                  </div>
                  <div class="col-sm-5">
                    <%= f.select :tipo, options_for_select([["Entrada",1] , ["Saída",2]]), {:prompt => "Tipo de Operação"}, {:class => 'form-control input-search required'} %>
                    <span class="validate">Selecione um item</span>
                  </div>
                </div>                
                                
            </div>
          </div>
        </div>
  </div><br>
 <div class="row">
        <div class="col-md-6 text-right">          
          <%= f.submit "Finalizar Operação", :class => 'btn btn-primary' %>
        </div>
        <div class="col-md-6">
          <%= link_to "Cancelar", produtos_path, :class => 'btn btn-default' %>
        </div>
</div>

<% end %>