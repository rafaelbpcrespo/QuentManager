<h2>Listing transacoes</h2>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th>Tipo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transacoes.each do |transacao| %>
      <tr>
        <td><%= transacao.produto_id %></td>
        <td><%= transacao.valor %></td>
        <td><%= transacao.quantidade %></td>
        <td><%= transacao.tipo %></td>
        <td><%= link_to 'Show', transacao %></td>
        <td><%= link_to 'Edit', edit_transacao_path(transacao) %></td>
        <td><%= link_to 'Destroy', transacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

