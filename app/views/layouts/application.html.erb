            <div class="form-group">
              <%= f.text_field :email, autofocus: true, placeholder: "Email", :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", :class => "form-control"%>
