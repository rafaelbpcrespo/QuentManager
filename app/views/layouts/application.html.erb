<!DOCTYPE HTML>
<html>
<head>
  <title>QuentManager</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "bootstrap/bootstrap.js", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
         <p class="alert-success"><%= notice %></p>
        <p class="alert-error"><%= alert %></p>
</head>
<body>
 


    <div class="navbar navbar-fixed-top">
      <nav class="navbar navbar-inner" role="navigation">
        <div class="container">
          <!-- <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse"> -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="brand" href="/">SiQuitutes</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><%= link_to "Clientes", "/clientes"  %></li>
              <li><%= link_to "Pedidos", "/pedidos"  %></li>
              <% if can? :manage, Cardapio %>
              <li><%= link_to "Produtos", "/produtos"  %></li>
              <li><%= link_to "Cardapios", "/cardapios"  %></li>
              <li><%= link_to "Empresas", "/empresas"  %></li>
              <% end %>
              <% if !usuario_signed_in? %>
              <li><%= link_to "Cadastre-se", new_usuario_registration_path%></li>
              <% end %>
              </ul>
              <% if usuario_signed_in? %>
              <ul class="nav navbar-nav navbar-right">              
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= current_usuario.email %> <b class="caret"> </b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Editar Perfil", cliente_path(current_usuario.cliente.id) %></li>
                  <li><%= link_to "Editar senha", edit_usuario_registration_path(current_usuario) %></li>
                  <li><%= link_to "Sair", destroy_usuario_session_path, :method => :delete %></li>
                </ul>
              </li>
             <% else %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "navbar-form navbar-right" , :id => ""})  do |f| %>
               <div class="form-group"><%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "input_default" %></div>
               <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", :class => "input_default" %> </div>
               <%= f.submit "Entrar", :class => "btn btn-primary" %>
             <% end %>
            <% end %>
            </ul>
          </div><!--/.nav-collapse -->          
        </div>
        </nav>
      </div>


<div class="container">
  <div class="row">
      <% if usuario_signed_in? %>
      <div class="span3">
        <h2>Resumo</h2>
          <p> Quantidade de clientes: <%= Cliente.all.count %> </p>
          <p> Total de pedidos hoje: <%= Pedido.de_hoje %> </p>
          <p> Valor total vendido hoje: R$ <%= Pedido.vendidos_hoje %> </p>
          <% Cardapio.carne.each do |cardapio| %>
            <% if cardapio.disponibilidade? %>
          <p> <%= cardapio.nome %>: <%= cardapio.quantidade %> dispon√≠veis </p>
            <% end %>
        <% end %>
        <h4> Produtos abaixo do limite </h4>
        <% Produto.all.each do |produto| %>
            <% if produto.abaixo_do_limite? %>
          <p> <%= produto.nome %> </p>
            <% end %>
        <% end %>

        </div>
      <div class="span8"><%= yield %>
      </div>
      <% else %>
        <%= yield %>
      <% end %>
  </div>
</div>

</body>
</html>

