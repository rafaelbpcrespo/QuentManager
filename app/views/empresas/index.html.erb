<%- model_class = Empresa -%>
<div class="page-header">
  <h1 class='titulo'>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><br/>
    <%= link_to 'Cadastrar Empresa', new_empresa_path, :class=>"button blue-cadastrar-top" %>
  </h1>
        
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>

      <tr>
        <td><%= empresa.nome %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.endereco %></td>
        <td>
          <%= link_to edit_empresa_path(empresa), html_options = { :class => 'button blue', :title => "Editar Dados"} do %>
                      <span class="editar"></span>
                      <% end %>
          <%= link_to empresa_path(empresa), html_options = { :class => 'button green', :title => "Ver Dados Completos"} do %>
                      <span class="listar"></span>          
          <% end %>
          <%= link_to empresa_path(empresa), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta empresa?')) },
                      :class => 'button red', :title => "Remover" do %>
                      <span class="remover"></span>
                      <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @empresas, renderer: BootstrapPagination::Rails %>

<%= link_to 'Cadastrar Empresa', new_empresa_path, :class => 'button blue-cadastrar-bottom' %>
