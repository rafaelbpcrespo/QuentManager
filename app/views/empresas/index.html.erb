<%- model_class = Empresa -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to 'Cadastrar Empresa', new_empresa_path, :class=>"btn btn-primary cadastrar" %>
  </h1>
        
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= link_to empresa.nome, empresa_path(empresa) %></td>
        <td><%= empresa.telefone %></td>
        <td><%= empresa.endereco %></td>
        <td>
          <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_empresa_path(empresa), :class => 'btn btn-primary' %>
          <%= link_to 'Ver', empresa_path(empresa), :class => 'btn btn-primary' %>
          <%= link_to t('.excluir', :default => t("helpers.links.excluir")),
                      empresa_path(empresa),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta empresa?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @empresas, renderer: BootstrapPagination::Rails %>

<%= link_to 'Cadastrar Empresa', new_empresa_path, :class => 'btn btn-primary' %>
