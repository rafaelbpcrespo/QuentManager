<%- model_class = Empresa -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>
  <%= link_to t('.nova_empresa', :default => t("helpers.links.nova_empresa")),
            new_empresa_path,
            :class => 'btn btn-primary' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @empresa.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @empresa.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @empresa.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacao) %>:</strong></dt>
  <dd><%= @empresa.observacao %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              empresas_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_empresa_path(@empresa), :class => 'btn' %>
  <%= link_to t('.excluir', :default => t("helpers.links.excluir")),
              empresa_path(@empresa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta empresa?')) },
              :class => 'btn btn-danger' %>
</div>
