<%- model_class = Empresa -%>
  <h2 class='titulo'><%=t '.title', :default => model_class.model_name.human.titleize %></h2>


<br>
<div class="row">
    <div class="col-md-6">
      <ul class="list-group">
        <li class="list-group-item list-group-item-success"><strong> Dados Cadastrais</strong> 
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:nome) %>:&nbsp;</strong> 
          <%= @empresa.nome %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:telefone) %>:&nbsp;</strong>
          <%= @empresa.telefone %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:endereco) %>:&nbsp;</strong>
          <%= @empresa.endereco %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:observacao) %>:&nbsp;</strong>
          <%= @empresa.observacao %>
        </li>        
      </ul>
    </div>
</div>
<br>
<div class="row">
  <div class="col-md-6 text-center">
        <div class="btn-group">
          <%= link_to empresas_path, :class => 'btn btn-default', :title => "Voltar" do %>
          <span class="glyphicon glyphicon-arrow-left"></span>
          <% end %>
        </div>
        <div class="btn-group">          
          <%= link_to new_empresa_path, :class => 'btn btn-success', :title => "Nova Empresa" do %>
          <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </div>
        <div class="btn-group">          
          <%= link_to edit_empresa_path, :class => 'btn btn-warning', :title => "Editar" do %>
          <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </div>
        <div class="btn-group">
          <%= link_to bloquear_empresa_path, :class => 'btn btn-danger', :title => "Bloquear" do %>
          <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </div> 
    </div>       
</div>