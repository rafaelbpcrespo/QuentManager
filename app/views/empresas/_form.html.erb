<%= form_for @empresa, :html => { :class => 'validate' } do |f| %>
  <% if @empresa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@empresa.errors.count, "error") %>:</h2>

      <ul>
      <% @empresa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li><br/>
      <% end %>
      </ul>
    </div>
<% end %>
  <table>
  <td>
  <p>
    <%= f.label :nome, :class => 'control-label' %>
    <%= f.text_field :nome, :class => 'text_field' %>
  </p>
  <p>
    <%= f.label :telefone, :class => 'control-label' %>
    <%= f.text_field :telefone, :class => 'text_field' %>
  </p>
  <p> 
    <%= f.label :endereco, :class => 'control-label' %>
    <%= f.text_field :endereco, :class => 'text_field' %>
 </p>
  <p>
   <%= f.label :observacao, :class => 'control-label' %>
   <%= f.text_field :observacao, :class => 'text_field' %>
  </p>
  <p>
<br>
    <%= f.submit nil, :class => 'button blue-cadastrar-top' %>
    <%= link_to "Cancelar", empresas_path, :class => 'button gray-voltar' %>
</p>
</td>
</table>
  
<% end %>
