<br>
<%= form_for @empresa, :html => { :class => 'form-horizontal validate' } do |f| %>

  <% @empresa.errors.full_messages.each do |msg| %>
    <li><%= msg %></li><br/>
  <% end %>

 <div class="row">
        <div class="col-md-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Empresa</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Nome</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :nome, :class => 'form-control required' %>                    
                    <span class="validate">Nome</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Endereço</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :endereco, :class => 'form-control required' %>                  
                    <span class="validate">Endereço</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Telefone</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :telefone, :class => 'form-control required' %>
                    <span class="validate">Telefone</span>
                  </div>
                </div>                 
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Observação</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :observacao, :class => 'form-control required' %>
                    <span class="validate">Observação</span>                    
                  </div>
                </div>                
            </div>
          </div>
        </div>
  </div><br>
 <div class="row">
        <div class="col-md-6 text-right">          
          <%= f.submit nil, :class => 'btn btn-success' %>
        </div>
        <div class="col-md-6">
          <%= link_to "Cancelar", proteinas_path, :class => 'btn btn-default' %>
        </div>
</div>
<% end %>
