<%= form_for @bebida, :html => { :class => 'form-horizontal validate' } do |f| %>

  <% @bebida.errors.full_messages.each do |msg| %>
    <li><%= msg %></li><br/>
  <% end %>

 <div class="row">
        <div class="col-md-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Bebida</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Nome</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :nome, :class => 'form-control required' %>                    
                    <span class="validate">Nome</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Quantidade</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :quantidade, :class => 'form-control required numeric' %>                  
                    <span class="validate">Quantidade</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Valor</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :valor, :class => 'form-control required numeric' %>
                    <span class="validate">Valor</span>
                  </div>
                </div>                 
               <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Tipo</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.select :tipo, ["Lata", "Pet 600ml", "Copo", "Garrafa"], {:prompt => "Selecione"} , { :class => 'form-control required' } %>
                    <span class="validate">Selecione um item</span>
                  </div>
                </div> 
                <div class="form-group">
              <label class="col-md-3" for="radios">Disponibilidade</label>
              <div class="col-md-9"> 
                <label class="radio-inline" for="radios-0">
                  <%= f.radio_button :disponibilidade, true , :checked => true, :value => true %>
                  Ativar
                </label> 
                <label class="radio-inline" for="radios-1">
                  <%= f.radio_button :disponibilidade, 'f' , :value => 'f' %>
                  Desativar
                </label>     
              </div>                                                    
            </div>                 
            </div>
          </div>
        </div>
  </div><br>
 <div class="row">
        <div class="col-md-6 text-right">          
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <div class="col-md-6">
          <%= link_to "Cancelar", bebidas_path, :class => 'btn btn-default' %>
        </div>
</div>
<% end %>