<%- model_class = Bebida -%>
<div class="page-header">
  <h1 class='titulo'><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><br/>
  <%= link_to "Nova Bebida",
            new_bebida_path,
            :class => 'button blue-cadastrar-top' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:qtd) %></th>
      <th><%= model_class.human_attribute_name(:valor) %></th>
      <th><%= model_class.human_attribute_name(:disponibilidade) %></th>
      <th width="164px"><center><%=t '.ações', :default => t("helpers.ações") %></center></th>
    </tr>
  </thead>
  <tbody>
    <% @bebidas.each do |bebida| %>
      <tr>
        <td><%= bebida.nome %></td>
        <td><%= bebida.quantidade %></td>
        <td>R$<%= exibir_decimal(bebida.valor) %></td>
        <td><% if bebida.disponibilidade? %> Ativado <% else %> Desativado <% end %></td>
        <td>
          <%= link_to edit_bebida_path(bebida), html_options = { :class => 'button blue', :title => "Editar Dados"} do %>
                      <span class="editar"></span>
                      <% end %>
          <%= link_to bebida_path(bebida), html_options = { :class => 'button green', :title => "Ver Dados Completos"} do %>
                      <span class="listar"></span>          
          <% end %>
          <%= link_to bebida_path(bebida), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta bebida?')) },
                      :class => 'button red', :title => "Remover" do %>
                      <span class="remover"></span>
                      <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nova Bebida",
            new_bebida_path,
            :class => 'button blue-cadastrar-bottom' %>