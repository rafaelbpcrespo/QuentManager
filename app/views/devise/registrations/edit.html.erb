<h1>Editar <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'validate' , method: :put }) do |f| %>
  <%= devise_error_messages! %>
<p>
  <%= f.label :email %>
  <%= f.text_field :email, autofocus: true, :class => "required email"%>
  <span class="validate">Campo requerido</span>
</p>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    Aguardando confirmação de: <%= resource.unconfirmed_email %>
  <% end %>
<p>
  <%= f.label :password, "Senha" %>
  <%= f.password_field :password, autocomplete: "off", :class => "required password" %>
  <span class="validate">Campo requerido</span>
</p>
<p>
  <%= f.label :password_confirmation, "Confirmação de senha" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", :class => "required password" %>
  <span class="validate">Campo requerido</span>
</p>
<p>
  <%= f.label :current_password, "Senha atual" %>
  <%= f.password_field :current_password, autocomplete: "off", :class => "required" %>
  <span class="validate">Campo requerido</span>
 </p>
<fieldset class="bot">

 <%= f.submit "Atualizar Senha", :class => 'button blue-cadastrar-top' %>
<% end %>

<%= button_to "Cancelar minha conta", registration_path(resource_name), :class => 'button purple', data: { confirm: "Tem certeza que deseja remover seu cadastro?" }, method: :delete %>

<%= link_to "Voltar", :back , :class => 'button gray-voltar' %>

</fieldset>