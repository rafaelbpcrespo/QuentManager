<h2>Editar Senha</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-horizontal validate' , method: :put }) do |f| %>
  <%= devise_error_messages! %>


<div class="row">
        <div class="col-md-6">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Dados do Sistema</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">E-mail</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :email, autofocus: true, :class => "form-control required email" %>
                    <span class="validate">Campo Requerido, informe um e-mail válido</span>
                  </div>
                </div>
                 <div class="form-group">
                  <div class="col-sm-3">
                    <label class="control-label">Senha Atual</label>
                  </div>
                  <div class="col-sm-9">
                    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control required minlength", minlength:"6" %>
                    <span class="validate">Digite a senha atual</span>
                  </div>
                </div>                 
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">Senha</label>
                  </div>
                  <div class="col-sm-10">
                    <%= f.password_field :password, autocomplete: "off", :class => "form-control required minlength password", minlength:"6" %>
                    <span class="validate">Campo requerido, mínimo 6 caracteres</span>
                  </div>
                </div>                
                <div class="form-group">
                  <div class="col-sm-4">
                    <label class="control-label">Confirmação Senha</label>
                  </div>
                  <div class="col-sm-8">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control required password" %>
                    <span class="validate">Confirmação de Senha</span>
                  </div>
                </div>                 
            </div>
          </div>           
        </div>
</div>
<br>
<div class="row">
        <div class="col-md-6 text-right">          
          <%= f.submit "Atualizar Senha", :class => 'btn btn-success' %>
        </div>
        <div class="col-md-6">
          <%= link_to "Cancelar", root_path, :class => 'btn btn-default' %>
        </div>
</div>
<% end %>