<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'validate' , method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.text_field :email, autofocus: true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password, "Senha" %> <i>(Deixe em branco caso não queira alterar a senha)</i><br />
    <%= f.text_field :password, autocomplete: "off", :class => "input_default" %></div>

  <div><%= f.label :password_confirmation, "Confirmação de senha" %><br />
    <%= f.text_field :password_confirmation, autocomplete: "off", :class => "input_default" %></div>

  <div><%= f.label :current_password, "Senha atual" %> <i>(É necessário digitar a senha atual para confirmar as alterações)</i><br />
    <%= f.text_field :current_password, autocomplete: "off", :class => "input_default" %></div>

  <div><%= f.submit "Atualizar Senha", :class => 'button blue-cadastrar-top' %></div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), :class => 'button blue-cadastrar-top', data: { confirm: "Tem certeza que deseja remover seu cadastro?" }, method: :delete %></p>

<%= link_to "Voltar", :back , :class => 'button gray' %>
