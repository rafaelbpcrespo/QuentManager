<%- model_class = Salada -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
  <%= link_to t('.nova_salada', :default => t("helpers.links.nova_salada")),
            new_salada_path,
            :class => 'btn btn-primary' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:disponibilidade) %></th>
      <th><%=t '.ações', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @saladas.each do |salada| %>
      <tr>
        <td><%= link_to salada.id, salada_path(salada) %></td>
        <td><%= salada.nome %></td>
        <td><%= salada.disponibilidade %></td>
        <td>
          <%= link_to t('.editar', :default => t("helpers.links.editar")),
                      edit_salada_path(salada), :class => 'btn btn-mini' %>
          <%= link_to t('.excluir', :default => t("helpers.links.excluir")),
                      saladas_path(salada),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir este tipo de Arroz?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= will_paginate @salada, renderer: BootstrapPagination::Rails %>

<%= link_to t('.novo_salada', :default => t("helpers.links.novo_salada")),
            new_salada_path,
            :class => 'btn btn-primary' %>