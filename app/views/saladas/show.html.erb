<%- model_class = Salada -%>
<h2 class='titulo'><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
<br>
<div class="row">
    <div class="col-md-6">
      <ul class="list-group">
        <li class="list-group-item list-group-item-success"><strong> Dados Cadastrais</strong> 
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:nome) %>:&nbsp;</strong> 
          <%= @salada.nome %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:quantidade) %>:&nbsp;</strong>
          <%= @salada.quantidade %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:valor) %>:&nbsp;</strong>
          <%= @salada.valor %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:descricao) %>:&nbsp;</strong>
          <%= @salada.descricao %>
        </li>
        <li class="list-group-item"><strong>
          <%= model_class.human_attribute_name(:disponibilidade) %>:&nbsp;</strong>
          <% if @salada.disponibilidade? %> Ativado <% else %> Desativado <% end %>
        </li>
      </ul>
    </div>
</div>
<br>
<div class="row">
  <div class="col-md-6 text-center">
        <div class="btn-group">
          <%= link_to saladas_path, :class => 'btn btn-default', :title => "voltar" do %>
          <span class="glyphicon glyphicon-arrow-left"></span>
          <% end %>
        </div>
        <div class="btn-group">          
          <%= link_to new_salada_path, :class => 'btn btn-success', :title => "Nova Salada" do %>
          <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </div>
        <div class="btn-group">          
          <%= link_to edit_salada_path, :class => 'btn btn-warning', :title => "Nova Guarnição" do %>
          <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </div>
        <div class="btn-group">
          <%= link_to desativar_salada_path, :class => 'btn btn-danger', :title => "Desativar" do %>
          <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </div> 
    </div>       
</div>