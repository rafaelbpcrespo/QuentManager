<%- model_class = Salada -%>
<!-- <p id="notice"><%= notice %></p> -->
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>
  <%= link_to t('.nova_salada', :default => t("helpers.links.nova_salada")),
            new_salada_path,
            :class => 'btn btn-primary' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @salada.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disponibilidade) %>:</strong></dt>
  <dd><%= @salada.disponibilidade %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              saladas_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_salada_path(@salada), :class => 'btn' %>
  <%= link_to t('.excluir', :default => t("helpers.links.excluir")),
              salada_path(@salada),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir este tipo de Salada?')) },
              :class => 'btn btn-danger' %>
</div>