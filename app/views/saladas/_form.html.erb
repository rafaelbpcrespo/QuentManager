<%= form_for @salada, :html => { :class => 'validate' } do |f| %>
  <% if @salada.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@salada.errors.count, "erro") %>:</h2>

      <ul>
      <% @salada.errors.full_messages.each do |msg| %>
        <li><%= msg %></li><br/>
      <% end %>
      </ul>
    </div>
    <% end %>

 <table>
  <td>
  <p>
    <%= f.label :nome, :class => 'control-label' %>
    <%= f.text_field :nome, :class => 'text_field' %>
  </p>
  <p>
    <%= f.label :quantidade, :class => 'control-label' %>
    <%= f.text_field :quantidade, :class => 'text_field' %>
  </p>
  <p>
    <%= f.label :valor, :class => 'control-label' %>
    <%= f.text_field :valor, :class => 'text_field' %>
  </p>
  <p>
    <%= f.label :descricao, :class => 'control-label' %>
    <%= f.text_field :descricao, :class => 'text_field' %>
  </p>
  <p>
    <%= f.label :disponibilidade, :class => 'control-label' %>
    Ativar
    <%= f.radio_button :disponibilidade, true , :checked => true, :value => true %>
    Desativar
    <%= f.radio_button :disponibilidade, 'f' , :value => 'f' %>
</p>
<br>
<p>
    <%= f.submit nil, :class => 'button blue-cadastrar-top' %>
    <%= link_to "Cancelar", saladas_path, :class => 'button gray-voltar' %>
</p>
</td>
</table>

<% end %>