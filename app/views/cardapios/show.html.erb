<%- model_class = Cardapio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @cardapio.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade) %>:</strong></dt>
  <dd><%= @cardapio.quantidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @cardapio.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacao) %>:</strong></dt>
  <dd><%= @cardapio.observacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disponibilidade) %>:</strong></dt>
  <dd><% if @cardapio.disponibilidade? %> Ativado <% else %> Desativado <% end %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              cardapios_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_cardapio_path(@cardapio), :class => 'btn' %>
  <%= link_to t('.excluir', :default => t("helpers.links.excluir")),
              cardapio_path(@cardapio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta cardapio?')) },
              :class => 'btn btn-danger' %>
</div>
