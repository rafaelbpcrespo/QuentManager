<%- model_class = Cardapio -%>
<div class="page-header">
  <h1 class='titulo'><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<fieldset class='show-produtos'>
  <legend>Dados Cadastrais</legend>
  <strong><%= model_class.human_attribute_name(:nome) %>:</strong>
  <%= @cardapio.nome %><br/>
  <strong><%= model_class.human_attribute_name(:quantidade) %>:</strong>
  <%= @cardapio.quantidade %><br/>
  <strong><%= model_class.human_attribute_name(:valor) %>:</strong>
  <%= @cardapio.valor %><br/>
  <strong><%= model_class.human_attribute_name(:observacao) %>:</strong>
  <%= @cardapio.observacao %><br/>
  <strong><%= model_class.human_attribute_name(:disponibilidade) %>:</strong>
  <% if @cardapio.disponibilidade? %> Ativado <% else %> Desativado <% end %>

</fieldset>

<div class="form-actions">
<%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              cardapios_path, :class => 'btn'  %>
  <%= link_to edit_cardapio_path(@cardapio), :class => 'button blue' do %>
                      <span class="editar"></span>          
          <% end %>

  <%= link_to cardapio_path(@cardapio), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir esta cardapio?')) }, :class => 'button red' do %>
                        <span class="remover"></span>
                      <% end %>
</div>
