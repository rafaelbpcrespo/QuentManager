<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Acompanhamentos</strong></dt>
  <% @pedido.pedidos_acompanhamentos.each do |pedido_acompanhamento| %>
  <dd><%= pedido_acompanhamento.quantidade %> <%= pedido_acompanhamento.acompanhamento.nome %></dd>
  <% end %>
  <dt><strong>Proteinas</strong></dt>
  <% @pedido.pedidos_cardapios.each do |pedido_cardapio| %>
  <dd> <%= pedido_cardapio.quantidade %> <%= pedido_cardapio.cardapio.nome %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @pedido.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @pedido.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @pedido.cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forma_de_pagamento) %>:</strong></dt>
  <dd><%= @pedido.forma_de_pagamento %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.voltar', :default => t("helpers.links.voltar")),
              pedidos_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_pedido_path(@pedido), :class => 'btn-primary' %>
  <%= link_to t('.excluir', :default => t("helpers.links.exlcuir")),
              pedido_path(@pedido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Deseja excluir este cliente?')) },
              :class => 'btn btn-danger' %>
</div>
