<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Acompanhamentos</strong></dt>
  <% @pedido.pedidos_acompanhamentos.each do |pedido_acompanhamento| %>
  <dd><%= pedido_acompanhamento.quantidade %> <%= pedido_acompanhamento.acompanhamento.nome %></dd>
  <% end %>
  <dt><strong>Proteinas</strong></dt>
  <% @pedido.pedidos_proteinas.each do |pedido_proteina| %>
  <dd> <%= pedido_proteina.quantidade %> <%= pedido_proteina.proteina.nome %></dd>
  <% end %>
  <dt><strong>Guarnições</strong></dt>
  <% @pedido.pedidos_guarnicoes.each do |pedido_guarnicao| %>
  <dd> <%= pedido_guarnicao.quantidade %> <%= pedido_guarnicao.guarnicao.nome %></dd>
  <% end %>
  <dt><strong>Saladas</strong></dt>
  <% @pedido.pedidos_saladas.each do |pedido_salada| %>
  <dd> <%= pedido_salada.quantidade %> <%= pedido_salada.salada.nome %></dd>
  <% end %>
  <dt><strong>Bebidas</strong></dt>
  <% @pedido.pedidos_bebidas.each do |pedido_bebida| %>
  <dd> <%= pedido_bebida.quantidade %> <%= pedido_bebida.bebida.nome %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @pedido.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @pedido.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @pedido.cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacoes) %>:</strong></dt>
  <dd><%= @pedido.qtd_extra(@pedido.pedidos_proteinas,Pedido::LIMITE_PROTEINAS) %> proteínas extra</dd>
  <dd><%= @pedido.qtd_extra(@pedido.pedidos_guarnicoes,Pedido::LIMITE_GUARNICOES) %> guarnições extra</dd>
  <dd><%= @pedido.qtd_extra(@pedido.pedidos_saladas,Pedido::LIMITE_SALADAS) %> saladas extra</dd>
  <dd><%= @pedido.qtd_extra(@pedido.pedidos_bebidas,Pedido::LIMITE_BEBIDAS) %> bebidas extra</dd>
</dl>

<div class="form-actions">
  <%= link_to "Corrigir Pedido", edit_pedido_path(@pedido), html_options = { :class => 'button blue', :title => "Corrigir Pedido"} %>
  <%= link_to "Cancelar Pedido", cancelar_pedido_path(@pedido), html_options = {:class => "button red", :title => "Cancelar Pedido", :id => "cancelar_#{@pedido.id}"} %>
  <%= link_to "Confirmar Pedido", confirmar_pedido_path(@pedido), html_options = {:class => "button green", :title => "Confirmar Pedido", :id => "confirmar_#{@pedido.id}"} %>
</div>
