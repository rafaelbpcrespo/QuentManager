<%= nested_form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%#= f.label :cliente_id, :class => 'control-label' %>
    <div class="controls">
      <%#= f.collection_select :cliente_id, Cliente.all, :id, :nome, :prompt => "Selecione", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :arroz, :class => 'control-label' %>
    <div class="controls">
      <%= label :arroz, "Branco", :class =>"checkbox inline" %>
      <%= check_box_tag :arroz, "Branco", false, :value => "Branco"%>
      <%= label :arroz, "Integral", :class =>"checkbox inline" %>
      <%= check_box_tag :arroz, "Integral", false, :value => "Integral" %>
      <%= label :arroz, "A la Grega", :class =>"checkbox inline" %>
      <%= check_box_tag :arroz, "A la Grega", false, :value => "A la Grega" %>
      <%= label :arroz, "Brócolis", :class =>"checkbox inline" %>
      <%= check_box_tag :arroz, "Brócolis", false, :value => "Brócolis" %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :feijao, :class => 'control-label' %>
    <div class="controls">
      <%= label :feijao, "Sim", :class =>"checkbox inline" %>
      <%= check_box_tag :feijao, "Sim", false, :value => "Sim" %>
      <%= label :feijao, "Não", :class =>"checkbox inline" %>
      <%= check_box_tag :feijao, "Não", false, :value => "Não" %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :farofa, :class => 'control-label' %>
    <div class="controls">
      <%= label :farofa, "Sim", :class =>"checkbox inline" %>
      <%= check_box_tag :farofa, "Sim", false, :value => "Sim" %>
      <%= label :farofa, "Não", :class =>"checkbox inline" %>
      <%= check_box_tag :farofa, "Não", false, :value => "Não" %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :carne, :class => 'control-label' %>
    <% @carnes_disponiveis.each do |carne| %>
    <div class="controls">
      <%= radio_button_tag :carne, "#{carne.nome}", :value => "#{carne.nome}" %>
      <%= label :carne, "#{carne.nome}", :class =>"radio inline" %>
    </div>
    <% end %>
  </div>

<div class="control-group">
    <%= f.label :acompanhamento, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :acompanhamento %>
    </div>
  </div>

<div class="control-group">
    <%= f.label :salada, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :salada %>
    </div>
  </div>

  <div class="control-group">
  <%= f.label :produto, :class => 'control-label' %> 
   <div class="controls">
    <%= f.fields_for :item_de_pedidos do |item| %>
      <%= item.collection_select :produto_id, Produto.bebidas, :id, :nome, :class => 'text_field' %>
      <%= item.link_to_remove "Remover este item" %>
    <% end %>
<p><%= f.link_to_add "Adicionar Item", :item_de_pedidos %></p>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :forma_de_pagamento, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :forma_de_pagamento, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancelar', :default => t("helpers.links.cancelar")),
                pedidos_path, :class => 'btn' %>
  </div>
<% end %>
