<% if current_usuario.admin? %>
  <fieldset class='form-princ'>
    <legend class='legend1'>Clientes <span class="usuario"></span></legend>
      <h3> Informações de Clientes</h3>
      <p>Clientes Cadastrados: <%= Cliente.all.count %></p>
      <p>Clientes Bloqueados: <%= Cliente.where(bloqueado: true).count %></p>
      <p>Clientes Cadastrados hoje: <%= Cliente.where(created_at: Time.now.beginning_of_day).count %></p>
  </fieldset>

<% if current_usuario.admin? %>
<fieldset class='form-princ'>
    <legend class='legend1'>Vendas<span class="venda"></span></legend>
      <h3> Informações de Vendas</h3>
      <p>Valor vendido hoje: R$ <%= exibir_decimal(Pedido.vendidos_hoje) %></p>
      <p>Vendas do mês: R$<%= exibir_decimal(Pedido.vendas_do_mes) %></p>    
  </fieldset>


<fieldset class='form-princ'>
    <legend class='legend1'>Pedidos<span class="pedido"></span></legend>
      <h3> Informações de Vendas</h3>
      <p>Valor vendido hoje: R$<%= exibir_decimal(Pedido.vendidos_hoje) %></p>
  </fieldset>
<% end %>
<fieldset class='form-princ'>
    <legend class='legend1'>Estoque<span class="estoque"></span></legend>
      <h3> Informações de Estoque </h3>
      <table class='tabela'>
        <thead>
          <tr>
            <th>Acabando</th>
          </tr>
        </thead>
        <tbody>
          <% Produto.acabando.each do |produto| %>
            <tr>
              <td><%= produto.nome %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <table class='tabela'>
        <thead>
          <tr>
            <th>Em falta</th>
          </tr>
        </thead>
        <tbody>
          <% Produto.zerados.each do |produto| %>
            <tr>
              <td><%= produto.nome %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Detalhes', home_relatorio_produtos_path %>      
  </fieldset>


  <% else %>
   <div class='cardapio_h1'><h1>Cardápio de Hoje</h1></div>
          <fieldset class='cardapio'>
            <legend class='legend1'>Proteínas<span class="usuario"></span></legend>
             
              <% Proteina.all.where(:disponibilidade => true).each do |proteina| %>
                <%= proteina.nome %> /
              <% end %>
          </fieldset>
         
           <fieldset class='cardapio'>
            <legend class='legend1'>Guarnições<span class="usuario"></span></legend>
              <% Guarnicao.all.where(:disponibilidade => true).each do |guarnicao| %>
                <%= guarnicao.nome %> /
              <% end %>            
            </fieldset>
           
             <fieldset class='cardapio'>
             <legend class='legend1'>Acompanhamentos<span class="usuario"></span></legend>
              <% Acompanhamento.all.where(:disponibilidade => true).each do |acompanhamento| %>
                <%= acompanhamento.nome %> /
              <% end %>              
            </fieldset>

             <fieldset class='cardapio'>
             <legend class='legend1'>Saladas<span class="usuario"></span></legend>
              <% Salada.all.where(:disponibilidade => true).each do |salada| %>
                <%= salada.nome %> /
              <% end %>              
            </fieldset>

             <fieldset class='cardapio'>
             <legend class='legend1'>Sobremesas<span class="usuario"></span></legend>
              <% Sobremesa.all.where(:disponibilidade => true).each do |sobremesa| %>
                <%= sobremesa.nome %> /
              <% end %>              
            </fieldset>

<fieldset class='fieldset_conta'>
    <legend class='legend1'>Conta<span class="venda"></span></legend>
      <center><p>Quantidade de pedidos:  <%= current_usuario.cliente.pedidos.count %></p>
      <p>Saldo atual: R$<%= current_usuario.cliente.conta.saldo.to_f %></p></center>
  </fieldset>

<% end %>